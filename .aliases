  if [[ -n $(kubectl get pods -l app=aggregator -o name 2>/dev/null) ]]; then
    kubectl logs -l app=aggregator -c aggregator --tail=-1
  else
    kubectl logs -l app=cost-analyzer -c aggregator --tail=-1
  fi
}
